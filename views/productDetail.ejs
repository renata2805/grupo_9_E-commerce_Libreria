<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
  <body>
    <header class="menuM">
      <%- include('./partials/header') %>
  </header>

  <body>

    <!-- <header>
      <%- include('./partials/header') %>
    </header> -->

    <section class="BoxBox">

      <section class="boxContainer">

      <div class="bookImageBox">
        <img class="bookImg" src="/images/products/<%= product.imagen %>"
          alt=<%product.nombreLibro%>/>
      </div>

        <div class="libro">
          <h2 class="titulo-libro"><%=product.nombreLibro%></h2>
          <p class="calificaion">Precio</p>
          <div>
            <button class="precio" type="button"><%=product.precio%></button>
          </div>
          <p class="reseña">
            <%=product.reseña%>
          </p>
          <a href=""><button class="botones">Comprar</button></a>
          <a href="../edit/<%=product.id%>"><button class="botones">Editar</button></a>
          <a href=""><button class="botones">Borrar</button></a>
        </div>

      </section>

        <section class="detallesBox"> 

        <div class="detalles">
          <div class="deta">
            <p>Número de paginas</p>
            <i class="fi fi-bs-book-alt"></i>
            <p><%=product.numeropaginas%></p>
          </div>

          <div class="deta">
            <p>Orígen</p>
            <i class="fi fi-bs-book-alt"></i>
            <p><%=product.origen%></p>
          </div>

          <div class="deta">
            <p>Editorial</p>
            <i class="fi fi-bs-book-alt"></i>
            <p><%=product.editorial%></p>
          </div>


          <div class="deta">
            <p>Fecha de públicación</p>
            <i class="fi fi-bs-book-alt"></i>
            <p><%=product.fechapublicacion%></p>
          </div>
        

        </div>

        </section>



        <section class="opinion">
          <div class="textOpinion">
          <h2>Opiniones Editoriales</h2>
          <h4>Sobre el autor</h4>
          <p class="reseña">
            <%=product.sobreautor%>
          </p>
        </div>
        </section>
    
    </section>

    <footer><%- include('./partials/footer') %></footer>
  </body>
</html>

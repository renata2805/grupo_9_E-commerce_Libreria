  <body>
    <!-- MENU -->
    <%- include('./partials/header') %>
    
    <!-- FIN MENU -->

    <!-- SLIDER -->
    <section id="container-slider">
      <div class="slider-frame">
        <ul>
          <li><img src="./images/libroAbierto.png" alt=""></li>
          <li><img src="./images/libros.png" alt=""></li>
          <li><img src="./images/lectores.png" alt=""></li>
          <li><img src="./images/libros.png" alt=""></li>
        </ul>
      </div>
      </ul>
    </section>

    <!-- FIN SLIDER -->


    <!-- RECOMENDADOS NOVEDADES MAS VENDIDOS -->
<section class="recomendadosNovedades">
      <div class="recomendados">
        <ul class="menu">
          <li clas><a href="#">Recomendados</a></li>
          <li><a href="#">Novedades</a></li>
          <li><a href="#">Más vendidos</a></li>
        </ul>
      </div>

      <% products.forEach(function(product){ 
        if(product.recomendados==true){product}
      %>
        <div class=".imagenesRecomendados">
          <section class="cajaImg">
            <a href="/products/productDetail/<%= product.id %>">
              <figure class="product-box_image">
                <img src="/images/<%= product.image %>" alt="imagen de producto">
              </figure>
              <article class="product-box_data">
                <h2><%= toThousand(product.precio) %></h2>
                <p><%= product.nombre %></p>
              </article>
            </a>
          </section>
        </div>
      <% }) %>

      </div>

</section>
    <!-- FIN RECOMENDADOS NOVEDADES MAS VENDIDOS -->

<!-- QUIENES SOMOS -->
